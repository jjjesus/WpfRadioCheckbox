<Window x:Class="WpfRadioCheckbox.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WpfRadioCheckbox"
    Title="Window1" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Button Height ="23" Width ="100" Content="Load" Click="LoadModel" />
            <TextBox Height="200" Text="{Binding Path=MessageText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Grid>
</Window>
